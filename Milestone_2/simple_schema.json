{
    "add-field-type": [{
        "name": "articleText",
        "class": "solr.TextField",
        "indexAnalyzer": {
            "tokenizer": {
                "class": "solr.StandardTokenizerFactory"
            },
            "filters": [{
                    "class": "solr.ASCIIFoldingFilterFactory",
                    "preserveOriginal": true
                },
                {
                    "class": "solr.LowerCaseFilterFactory"
                },
                {
                    "class": "solr.SynonymGraphFilterFactory",
                    "expand": "true",
                    "ignoreCase": "true",
                    "synonyms": "synonyms.txt"
                }
            ]
        },
        "queryAnalyzer": {
            "tokenizer": {
                "class": "solr.StandardTokenizerFactory"
            },
            "filters": [{
                    "class": "solr.ASCIIFoldingFilterFactory",
                    "preserveOriginal": true
                },
                {
                    "class": "solr.LowerCaseFilterFactory"
                },
                {
                    "class": "solr.SynonymGraphFilterFactory",
                    "expand": "true",
                    "ignoreCase": "true",
                    "synonyms": "synonyms.txt"
                }

            ]
        }
    }],
    "add-field": [{
            "name": "title",
            "type": "articleText",
            "indexed": true
        },
        {
            "name": "text",
            "type": "articleText",
            "indexed": true
        },
        {
            "name": "excerpt",
            "type": "articleText",
            "indexed": true
        }
    ]
}