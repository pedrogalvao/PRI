{
    "schema": {
        "name": "news-schema",
        "version": 1.6,
        "uniqueKey": "id",
        "add-field-type": [{
            "name": "text_pt",
            "class": "solr.TextField",
            "positionIncrementGap": "100",
            "analyzer": {
                "tokenizer": {
                    "class": "solr.StandardTokenizerFactory"
                },
                "filters": [
                    { "class": "solr.ASCIIFoldingFilterFactory", "preserveOriginal": true },
                    {
                        "class": "solr.LowerCaseFilterFactory"
                    },
                    {
                        "class": "solr.StopFilterFactory",
                        "format": "snowball",
                        "words": "lang/stopwords_pt.txt",
                        "ignoreCase": "true"
                    },
                    {
                        "class": "solr.PortugueseLightStemFilterFactory"
                    },
                    {
                        "class": "solr.SynonymGraphFilterFactory",
                        "expand": "true",
                        "ignoreCase": "true",
                        "synonyms": "synonyms.txt"
                    }
                ]
            }
        }],
        "add-field": [{
                "name": "title",
                "type": "text_pt",
                "indexed": true
            },
            {
                "name": "text",
                "type": "text_pt",
                "indexed": true
            },
            {
                "name": "excerpt",
                "type": "text_pt",
                "indexed": true
            },
            {
                "name": "tags",
                "type": "text_pt",
                "indexed": true
            },
            {
                "name": "datetime",
                "type": "pdate",
                "indexed": true
            },
            {
                "name": "text_length",
                "type": "pint",
                "indexed": false
            }
        ]
    }
}