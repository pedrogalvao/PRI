{
    "add-field-type": [{
        "name": "articleText",
        "class": "solr.TextField",
        "indexAnalyzer": {
            "tokenizer": {
                "class": "solr.StandardTokenizerFactory"
            },
            "filters": [{
                    "class": "solr.ASCIIFoldingFilterFactory",
                    "preserveOriginal": true
                },
                {
                    "class": "solr.LowerCaseFilterFactory"
                },
                {
                    "class": "solr.StopFilterFactory",
                    "format": "snowball",
                    "words": "lang/stopwords_pt.txt",
                    "ignoreCase": "true"
                },
                {
                    "class": "solr.SynonymGraphFilterFactory",
                    "expand": "true",
                    "ignoreCase": "true",
                    "synonyms": "synonyms.txt"
                },
                {
                    "class": "solr.PortugueseLightStemFilterFactory"
                }
            ]
        },
        "queryAnalyzer": {
            "tokenizer": {
                "class": "solr.StandardTokenizerFactory"
            },
            "filters": [{
                    "class": "solr.ASCIIFoldingFilterFactory",
                    "preserveOriginal": true
                },
                {
                    "class": "solr.LowerCaseFilterFactory"
                },
                {
                    "class": "solr.SynonymGraphFilterFactory",
                    "expand": "true",
                    "ignoreCase": "true",
                    "synonyms": "synonyms.txt"
                }

            ]
        }
    }],
    "add-field": [{
            "name": "title",
            "type": "articleText",
            "indexed": true
        },
        {
            "name": "text",
            "type": "articleText",
            "indexed": true
        },
        {
            "name": "excerpt",
            "type": "articleText",
            "indexed": true
        },
        {
            "name": "text_length",
            "type": "pint",
            "indexed": false,
            "stored": true
        },
        {
            "name": "datetime",
            "type": "pdate",
            "indexed": true,
            "stored": true
        },
        {
            "name": "url",
            "type": "string",
            "indexed": false,
            "stored": true
        },
        {
            "name": "tags",
            "type": "string",
            "indexed": true,
            "stored": true,
            "multiValued": true
        },
        {
            "name": "partner",
            "type": "string",
            "indexed": true,
            "stored": true,
            "multiValued": true
        }
    ]
}